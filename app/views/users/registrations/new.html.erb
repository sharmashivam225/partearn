<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name, :html => { :class => "form-horizontal user" })) do |f| %>
  <%= devise_error_messages! %>



  <div class="row">
  <div class="form-group">
      <%= f.label :first_name%>
      <%= f.text_field :first_name, :class => 'form-control' %>
      <%=f.error_span(:first_name) %>
    </div>
    <div class="form-group">
      <%= f.label :last_name%>
      <%= f.text_field :last_name, :class => 'form-control' %>
      <%=f.error_span(:last_name) %>
    </div>

    <div class="form-group">
      <%= f.label :username%>
      <%= f.text_field :username, :class => 'form-control' %>
      <%=f.error_span(:username) %>
    </div>

    <div class="form-group">
      <%= f.label :email%>
      <%= f.email_field :email, :class => 'form-control', autofocus: true %>
      <%=f.error_span(:email) %>
    </div>
    <div class="form-group">
      <%= f.label :password%>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", :class => 'form-control' %>
      <%=f.error_span(:password) %>
    </div>
    <div class="form-group">
      <%= f.label :confirm%>
        <%= f.password_field :password_confirmation, :class => 'form-control', autocomplete: "off" %>
      <%=f.error_span(:password_confirmation) %>
    </div>

    <div class="form-group">
     <%= f.label :contact_no%>
     <%= f.text_field :contact_no, :class => 'form-control' %>
     <%=f.error_span(:contact_no) %>
    </div>
    <div class="form-group">
      <%= f.label :address%>
      <%= f.text_field :address, :class => 'form-control' %>
      <%=f.error_span(:address) %>
    </div>
    <div class="form-group">
      <%= f.label :age%>
      <%= f.text_field :age, :class => 'form-control' %>
      <%=f.error_span(:age) %>
    </div>
<div class="form-group">
    <%= f.label :sex%>
      <%= f.text_field :sex, :class => 'form-control' %>
    <%=f.error_span(:sex) %>
  </div>
  <div class="form-group">
    <%= f.label :nationality%>
      <%= f.text_field :nationality, :class => 'form-control' %>
    <%=f.error_span(:nationality) %>
  </div>
  <div class="form-group">
    <%= f.label :country%>
      <%= f.text_field :country, :class => 'form-control' %>
    <%=f.error_span(:country) %>
  </div>
  <div class="form-group">
    <%= f.label :city%>
      <%= f.text_field :city, :class => 'form-control' %>
    <%=f.error_span(:city) %>
  </div>
  <div class="form-group">
    <%= f.label :zip%>
      <%= f.text_field :zip, :class => 'form-control' %>
    <%=f.error_span(:zip) %>
  </div>
  <div class="form-group">
    <%= f.label :is_client%>
      <%= f.check_box :is_client %>
  </div>
  <div class="form-group">
    <%= f.label :is_jobseeker%>
    <%= f.check_box :is_jobseeker %>
  </div>
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
